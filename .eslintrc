{
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "no-undef": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": 1,
    "no-underscore-dangle": 0,
    "strict": 0
  },

  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "BROWSER": true
  },

  "plugins": ["react"]

}
